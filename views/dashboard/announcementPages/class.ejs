<%- include('../../partials/dashboard') %>

    <main class="flex-grow p-6 md:p-10 lg:p-12 bg-gradient-to-r from-blue-50 to-blue-200">
        <!-- Flash Messages -->
        <%- include('../../partials/flashMessage') %>


            <!-- Page Header -->
            <header
                class="flex items-center justify-between border-b pb-6 mb-8 bg-gradient-to-r from-blue-500 to-blue-900 text-white rounded-lg shadow-xl px-8 py-6">
                <div>
                    <h2 class="text-4xl font-extrabold tracking-wide">Class Announcements</h2>
                    <p class="text-md text-gray-200 mt-2">Stay informed with the latest updates for your
                        classes.</p>
                </div>
            </header>

            <!-- Announcements List -->
            <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% announcements.forEach(announcement=> { %>
                    <div
                        class="bg-white p-6 rounded-lg shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
                        <h3
                            class="text-2xl font-semibold text-gray-800 mb-3 hover:text-green-600 transition-colors duration-200">
                            <%= announcement.title %>
                        </h3>
                        <p class="text-sm text-gray-500 mb-3">
                            <strong class="text-gray-800">For Class:</strong>
                            <%= announcement.classId ? announcement.classId.name : 'N/A' %>
                        </p>
                        <p class="text-gray-700 mb-4">
                            <%= announcement.content %>
                        </p>
                        <div class="flex justify-between items-center text-sm text-gray-500">
                            <span>
                                Posted on : <%= new Date(announcement.createdAt).toLocaleDateString() %>
                            </span>
                        </div>
                    </div>
                    <% }); %>
            </section>
    </main>

    <%- include('../../partials/dashboardfooter') %>