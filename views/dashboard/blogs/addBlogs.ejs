<%- include('../../partials/dashboard') %>

    <main class="flex-grow p-6 md:p-10 bg-gradient-to-r from-blue-50 to-blue-200">
        <%- include('../../partials/flashMessage') %>

            <!-- Header -->
            <header
                class="flex items-center justify-between border-b pb-6 mb-8 text-white rounded-lg bg-gradient-to-r from-blue-500 to-blue-900 shadow-lg px-8 py-6">
                <div>
                    <h2 class="text-3xl font-semibold tracking-wide">Add Blog</h2>
                    <p class="text-sm hidden sm:block text-gray-200">Form for adding a Blog to Website.</p>
                </div>
                <div>
                    <a href="/dashboard/blogs/display"
                        class="inline-block bg-white text-blue-600 font-semibold py-2 px-6 rounded-lg shadow-md hover:bg-blue-100 hover:shadow-lg transition-all duration-300">
                        Show All Blogs
                    </a>
                </div>
            </header>

            <!-- Add Blog Form -->
            <section
                class="bg-gradient-to-br from-gray-100 to-gray-200 p-8 rounded-lg shadow-xl transition-all duration-300 hover:shadow-2xl">
                <h4 class="text-2xl font-semibold text-gray-700 mb-6">Add a New Blog</h4>
                <form method="POST" action="/dashboard/blogs/add" enctype="multipart/form-data" class="space-y-6">
                    <!-- Title Input -->
                    <div class="flex flex-col">
                        <label for="title" class="text-gray-600 font-medium mb-2">Title</label>
                        <input type="text" id="title" name="title" placeholder="Enter blog title"
                            class="border border-gray-300 p-4 rounded-lg focus:ring-2 focus:ring-blue-500 text-gray-800"
                            required>
                    </div>

                    <!-- Content Input -->
                    <div class="flex flex-col">
                        <label for="content" class="text-gray-600 font-medium mb-2">Content</label>
                        <textarea id="content" name="content" rows="6" placeholder="Write your blog content here"
                            class="border border-gray-300 p-4 rounded-lg focus:ring-2 focus:ring-blue-500 text-gray-800"
                            required></textarea>
                    </div>

                    <!-- Author Input -->
                    <div class="flex flex-col">
                        <label for="author" class="text-gray-600 font-medium mb-2">Author Name</label>
                        <input type="text" id="author" name="author" placeholder="Enter Author Name"
                            class="border border-gray-300 p-4 rounded-lg focus:ring-2 focus:ring-blue-500 text-gray-800"
                            required>
                    </div>

                    <!-- Image Upload -->
                    <div class="flex flex-col">
                        <label for="image" class="text-gray-600 font-medium mb-2">Upload Image</label>
                        <input type="file" id="image" name="image"
                            class="border border-gray-300 p-4 rounded-lg focus:ring-2 focus:ring-blue-500 text-gray-800"
                            required>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                        class="bg-blue-600 text-white py-3 px-8 rounded-lg shadow-lg hover:bg-blue-700 hover:shadow-xl transition-all duration-300">
                        Add Blog
                    </button>
                </form>
            </section>

    </main>

    <%- include('../../partials/dashboardfooter') %>