<%- include('../../partials/dashboard') %>

    <main class="flex-grow flex-wrap p-4 md:p-8 lg:p-12 bg-gradient-to-r from-blue-50 to-blue-200">
        <%- include('../../partials/flashMessage') %>

            <!-- Edit Principal Section -->
            <header
                class="flex items-center justify-between border-b pb-6 mb-8 bg-green-600 text-white rounded-lg shadow-md px-8 py-6">
                <div>
                    <h2 class="text-3xl font-semibold tracking-wide">Edit Principal</h2>
                    <p class="text-sm sm:hidden lg:block text-white">Edit the information of the principal.</p>
                </div>
            </header>

            <form action="/dashboard/principal/edit/<%= principal._id %>" method="POST" enctype="multipart/form-data"
                class="space-y-4">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" id="name" name="name" value="<%= principal.name %>"
                        class="block w-full mt-2 p-2 border border-gray-300 rounded-md" required>
                </div>

                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="email" name="email" value="<%= principal.email %>"
                        class="block w-full mt-2 p-2 border border-gray-300 rounded-md" required>
                </div>

                <div class="mb-4">
                    <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                    <textarea id="description" name="description"
                        class="block w-full mt-2 p-2 border border-gray-300 rounded-md" rows="4"
                        required><%= principal.description %></textarea>
                </div>

                <!-- Image Display and Upload Section -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700">Current Image</label>
                    <% if (principal.imageUrl) { %>
                        <div class="mb-4">
                            <img src="<%= principal.imageUrl %>" alt="Admin Image"
                                class="w-32 h-32 object-cover rounded-full border-4 border-indigo-600 shadow-md">
                        </div>
                        <% } else { %>
                            <p class="text-sm text-gray-500">No image available.</p>
                            <% } %>

                                <input type="hidden" name="image" value="<%= principal.imageUrl %>" />

                                <label for="image" class="block text-sm font-medium text-gray-700 mt-4">Upload New
                                    Image (Optional)</label>
                                <input type="file" name="image"
                                    class="w-full mt-1 px-4 py-2 border rounded-lg text-gray-800 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                </div>


                <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700">Update
                    Principal</button>
            </form>
    </main>

    <%- include('../../partials/dashboardfooter') %>