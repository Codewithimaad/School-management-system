<%- include('../../partials/dashboard') %>

    <div class="flex-grow p-4 md:p-8 lg:p-12 bg-gradient-to-r from-blue-50 to-blue-200">


        <h1 class="text-3xl font-extrabold text-gray-900 mb-4">Class Details: <%= classItem.name %>
        </h1>

        <!-- Class Information Section -->
        <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Class Information</h2>

            <p class="text-lg font-bold text-gray-700">Section: <span class="font-semibold">
                    <%= classItem.section %>
                </span></p>

            <p class="text-lg font-bold text-gray-700">Total Students: <span class="font-semibold">
                    <%= classItem.students.length %>
                </span></p>
        </div>



        <!-- Students Table Section -->
        <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Students</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full table-auto">
                    <thead>
                        <tr class="bg-gray-100 text-left">
                            <th class="px-4 py-3 text-sm font-semibold text-gray-700">Roll No</th>
                            <th class="px-4 py-3 text-sm font-semibold text-gray-700">Name</th>
                            <th class="px-4 py-3 text-sm font-semibold text-gray-700">F Name</th>
                            <th class="px-4 py-3 text-sm font-semibold text-gray-700">Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% classItem.students.forEach(student=> { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-4 text-sm text-gray-700">
                                    <%= student.roll_number %>
                                </td>
                                <td class="px-4 py-4 text-sm font-medium text-gray-800">
                                    <%= student.name %>
                                </td>
                                <td class="px-4 py-4 text-sm font-medium text-gray-800">
                                    <%= student.fname %>
                                </td>
                                <td class="px-4 py-4 text-sm text-gray-700">
                                    <%= student.email %>
                                </td>

                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Back Button -->
        <a href="/dashboard/class/reports"
            class="mt-4 inline-block bg-blue-800 text-white py-3 px-6 rounded-lg shadow-md hover:bg-blue-900 transition duration-200">
            Back to Class Reports
        </a>
    </div>

    <%- include('../../partials/dashboardfooter') %>