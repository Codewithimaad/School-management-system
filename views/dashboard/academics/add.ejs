<%- include('../../partials/dashboard') %>

    <main class="flex-grow flex-wrap p-2 md:p-8 lg:p-12 bg-gradient-to-r from-blue-50 to-blue-200">
        <%- include('../../partials/flashMessage') %>



            <!-- Header Section -->
            <header
                class="flex items-center justify-between border-b pb-6 mb-8 text-white rounded-lg shadow-md px-8 py-6"
                style="background-color: #1a2851;">
                <div>
                    <h2 class="text-3xl font-semibold tracking-wide">Add Academics</h2>
                    <p class="text-sm sm:hidden lg:block text-gray-500">Please fill in the Academics details
                        below.</p>
                </div>
            </header>

            <!-- Academics Form (Card Style) -->
            <section id="Academics-form">
                <form action="/dashboard/academics/add" method="POST" class="bg-white p-8 shadow-lg rounded-lg w-full">

                    <!-- Title Input -->
                    <div class="mb-6">
                        <label for="title" class="block text-sm font-medium text-gray-700">
                            Title </label>
                        <input type="text" name="title"
                            class="mt-1 block w-full py-3 px-4 bg-gray-100 outline-none rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                            placeholder="Enter Title" required />
                    </div>

                    <!-- Content Input -->
                    <div class="mb-6">
                        <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
                        <textarea name="content" rows="4"
                            class="mt-1 block w-full p-2 bg-gray-100 outline-none rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                            placeholder="Provide a brief content" required></textarea>
                    </div>



                    <!-- Submit Button -->
                    <div class="flex justify-end">
                        <button type="submit"
                            class="px-6 py-3 bg-blue-800 text-white text-sm font-semibold rounded-md shadow hover:bg-blue-700 focus:ring focus:ring-blue-200 focus:outline-none">
                            Add Academics
                        </button>
                    </div>
                </form>
            </section>
    </main>



    <%- include('../../partials/dashboardfooter') %>