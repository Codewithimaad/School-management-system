<%- include('../../partials/dashboard') %>

    <div class="max-w-7xl mx-auto px-6 py-16">

        <%- include('../../partials/flashMessage') %>


            <!-- Header Section -->
            <header
                class="flex items-center justify-between bg-blue-600 text-white rounded-lg shadow-md px-8 py-6 mb-8">
                <div>
                    <h2 class="text-3xl font-semibold tracking-wide">Upload New Image</h2>
                    <p class="text-sm lg:block hidden">Please fill in the details below to add an
                        image.
                    <p>
                </div>
                <a href="/dashboard/gallery/report"
                    class="bg-white text-green-600 hover:bg-gray-100 font-semibold px-4 py-2 rounded-md shadow-md transition duration-300">
                    All Gallery Reports
                </a>
            </header>


            <!-- Form Section -->
            <section class="space-y-8">
                <form action="/dashboard/gallery/add" method="POST" enctype="multipart/form-data" class="space-y-6">
                    <!-- Title Description -->
                    <div>
                        <label for="title" class="block text-lg font-medium text-gray-700">Title</label>
                        <input name="title" id="title" rows="4" required
                            class="w-full mt-2 p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200">
                    </div>

                    <!-- Content Description -->
                    <div>
                        <label for="content" class="block text-lg font-medium text-gray-700">Description</label>
                        <textarea name="content" id="content" rows="4" required
                            class="w-full mt-2 p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200"></textarea>
                    </div>

                    <!-- Image Upload -->
                    <div>
                        <label for="image" class="block text-lg font-medium text-gray-700">Upload Image</label>
                        <input type="file" name="image" id="image" required
                            class="w-full mt-2 p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200">
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit"
                            class="inline-block bg-blue-800 text-white py-3 px-8 rounded-lg shadow-md hover:bg-blue-900 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Upload Image
                        </button>
                    </div>
                </form>
            </section>

    </div>

    <%- include('../../partials/dashboardfooter') %>