<%- include('../../partials/dashboard') %>

    <div class="max-w-7xl mx-auto px-6 py-16">
        <h1 class="text-4xl font-bold text-center mb-6">Edit Image</h1>

        <%- include('../../partials/flashMessage') %>


            <form action="/dashboard/gallery/edit/<%= image._id %>" method="POST" enctype="multipart/form-data"
                class="space-y-6">

                <!-- Title Description -->
                <div>
                    <label for="title" class="block text-lg font-medium text-gray-700">Title</label>
                    <input name="title" id="title" value="<%= image.title %>" rows="4" required
                        class="w-full mt-2 p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200">
                </div>


                <div>
                    <label for="content" class="block text-lg font-medium text-gray-700">Content</label>
                    <textarea name="content" id="content" required
                        class="w-full mt-2 p-3 border border-gray-300 rounded-lg"
                        rows="4"><%= image.content %></textarea>
                </div>

                <!-- Image Display and Upload Section -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700">Current Image</label>
                    <% if (image.imageUrl) { %>
                        <div class="mb-4">
                            <img src="<%= image.imageUrl %>" alt="Admin Image"
                                class="w-32 h-32 object-cover rounded-full border-4 border-indigo-600 shadow-md">
                        </div>
                        <% } else { %>
                            <p class="text-sm text-gray-500">No image available.</p>
                            <% } %>

                                <input type="hidden" name="image" value="<%= image.imageUrl %>" />

                                <label for="image" class="block text-sm font-medium text-gray-700 mt-4">Upload New
                                    Image (Optional)</label>
                                <input type="file" name="image"
                                    class="w-full mt-1 px-4 py-2 border rounded-lg text-gray-800 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div class="text-center">
                    <button type="submit"
                        class="inline-block bg-blue-800 text-white py-3 px-6 rounded-lg shadow-md hover:bg-blue-900 transition duration-300 ease-in-out">
                        Update Image
                    </button>
                </div>
            </form>
    </div>

    <%- include('../../partials/dashboardfooter') %>