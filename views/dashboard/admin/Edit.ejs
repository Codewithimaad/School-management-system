<%- include('../../partials/dashboard') %>

    <main class="flex-grow flex-wrap p-2 md:p-8 lg:p-12 bg-gradient-to-r from-blue-50 to-blue-200">
        <%- include('../../partials/flashMessage') %>

            <header
                class="flex items-center justify-between border-b pb-6 mb-8 text-white rounded-lg shadow-md px-8 py-6"
                style="background-color: #1a2851;">
                <div>
                    <h2 class="text-3xl font-semibold tracking-wide">Edit Admin</h2>
                    <p class="text-sm sm:hidden lg:block text-gray-500">Update the admin details below.</p>
                </div>
            </header>

            <section id="edit-admin-form">
                <form action="/dashboard/admin/edit/<%= admin._id %>" method="POST" enctype="multipart/form-data"
                    class="bg-white p-8 shadow-lg rounded-lg w-full">

                    <!-- Name -->
                    <div class="mb-6">
                        <label for="name" class="block text-sm font-medium text-gray-700">Admin's Name</label>
                        <input type="text" name="name" value="<%= admin.name %>"
                            class="mt-1 block w-full py-3 px-4 bg-gray-100 outline-none rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                            required />
                    </div>

                    <!-- Email -->
                    <div class="mb-6">
                        <label for="email" class="block text-sm font-medium text-gray-700">Admin's Email</label>
                        <input type="email" name="email" value="<%= admin.email %>"
                            class="mt-1 block w-full py-3 px-4 bg-gray-100 outline-none rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                            required />
                    </div>

                    <!-- Phone -->
                    <div class="mb-6">
                        <label for="phone" class="block text-sm font-medium text-gray-700">Phone No</label>
                        <input type="number" name="phone" value="<%= admin.phone %>"
                            class="mt-1 block w-full py-3 px-4 bg-gray-100 outline-none rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                            required />
                    </div>

                    <!-- Description -->
                    <div class="mb-6">
                        <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                        <textarea name="description" rows="4"
                            class="mt-1 block w-full p-2 bg-gray-100 outline-none rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                            required><%= admin.description %></textarea>
                    </div>

                    <!-- Image Display and Upload Section -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700">Current Image</label>
                        <% if (admin.imageUrl) { %>
                            <div class="mb-4">
                                <img src="<%= admin.imageUrl %>" alt="Admin Image"
                                    class="w-32 h-32 object-cover rounded-full border-4 border-indigo-600 shadow-md">
                            </div>
                            <% } else { %>
                                <p class="text-sm text-gray-500">No image available.</p>
                                <% } %>

                                    <input type="hidden" name="image" value="<%= admin.imageUrl %>" />

                                    <label for="image" class="block text-sm font-medium text-gray-700 mt-4">Upload New
                                        Image (Optional)</label>
                                    <input type="file" name="image"
                                        class="w-full mt-1 px-4 py-2 border rounded-lg text-gray-800 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    </div>


                    <!-- Submit Button -->
                    <div class="flex justify-end">
                        <button type="submit"
                            class="px-6 py-3 bg-blue-800 text-white text-sm font-semibold rounded-md shadow hover:bg-blue-700 focus:ring focus:ring-blue-200 focus:outline-none">
                            Update Admin
                        </button>
                    </div>
                </form>
            </section>
    </main>

    <%- include('../../partials/dashboardfooter') %>