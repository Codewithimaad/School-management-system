<!-- Flash Messages -->
<% if (success_msg.length> 0 && success_msg) { %>
    <div id="success-alert" class="alert alert-success alert-dismissible fade show fixed mb-3" role="alert"
        style="z-index: 1050;">
        <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if (error_msg.length> 0 && error_msg) { %>
            <div id="error-alert" class="alert alert-danger alert-dismissible fade show fixed mb-3" role="alert"
                style="z-index: 1050;">
                <%= error_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <!-- JavaScript to Auto-hide Flash Messages -->
                <script>
                    // Hide success message after 5 seconds
                    setTimeout(() => {
                        const successAlert = document.getElementById('success-alert');
                        if (successAlert) {
                            successAlert.classList.remove('show');
                            successAlert.classList.add('hide');
                        }
                    }, 5000);

                    // Hide error message after 5 seconds
                    setTimeout(() => {
                        const errorAlert = document.getElementById('error-alert');
                        if (errorAlert) {
                            errorAlert.classList.remove('show');
                            errorAlert.classList.add('hide');
                        }
                    }, 5000);
                </script>