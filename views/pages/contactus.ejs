<%- include('../partials/header') %>

    <div class="bg-gradient-to-r from-blue-100 to-blue-300 py-16 mt-20">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <h1 class="text-4xl font-extrabold text-gray-900 mb-6">Contact Us</h1>
            <p class="text-xl text-gray-700 mb-12">
                We're here to assist you. Whether you have a question or need support, feel free to reach out.
            </p>

            <!-- Contact Information Section -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-12 mb-12">
                <!-- Address and Phone -->
                <div class="bg-white p-8 rounded-lg shadow-lg">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-6">Our Location</h3>
                    <p class="text-gray-700 mb-4">
                        <strong class="text-gray-900">Address:</strong> Shahzadi Payeen District dir lower timergara,
                        Kpk
                    </p>
                    <p class="text-gray-700 mb-4">
                        <strong class="text-gray-900">Phone:</strong> <a href="tel:+15551234567"
                            class="text-blue-600 hover:text-blue-800">+1 (555) 123-4567</a>
                    </p>
                    <p class="text-gray-700">
                        <strong class="text-gray-900">Email:</strong> <a href="mailto:info@schoolsystem.com"
                            class="text-blue-600 hover:text-blue-800">info@schoolsystem.com</a>
                    </p>
                </div>

                <!-- OpenStreetMap Section using Leaflet -->
                <div class="bg-white p-6 rounded-lg shadow-lg z-1 relative">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-4">Find Us Here</h3>
                    <div id="map" class="w-full h-64 rounded-lg overflow-hidden"></div> <!-- Map Container -->
                </div>

            </div>

            <!-- Contact Form Section -->
            <div class="bg-white p-10 rounded-xl shadow-lg max-w-2xl mx-auto mt-12">
                <h3 class="text-3xl font-bold text-gray-800 mb-8 text-center tracking-tight">Send Us a Message</h3>

                <!-- Flash Messages -->
                <%- include('../partials/flashMessage') %>

                    <!-- Contact Form -->
                    <form action="/contact" method="POST" class="space-y-8">
                        <!-- Name Field -->
                        <div>
                            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                            <input type="text" id="name" name="name"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition placeholder-gray-400"
                                placeholder="Enter your Name" required>
                        </div>

                        <!-- Email Field -->
                        <div>
                            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email
                                Address</label>
                            <input type="email" id="email" name="email"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition placeholder-gray-400"
                                placeholder="Enter your Email" required>
                        </div>

                        <!-- Message Field -->
                        <div>
                            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Message</label>
                            <textarea id="message" name="message" rows="5"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition placeholder-gray-400"
                                placeholder="Write your message here..." required></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit"
                                class="bg-blue-600 text-white font-semibold py-3 px-8 rounded-lg shadow-lg hover:bg-blue-700 hover:scale-105 transition-transform focus:outline-none focus:ring-2 focus:ring-blue-400">
                                Send Message
                            </button>
                        </div>
                    </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <!-- Map Script -->
        <script>
            var map = L.map('map').setView([34.8682909, 71.8706888], 15); // Coordinates for your location

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            L.marker([34.8682909, 71.8706888]).addTo(map)
                .bindPopup('<b>Our Location</b><br> Luminous International School Shahzadi, Kpk, Dir Lower')
                .openPopup();
        </script>

        <!-- Flash Message Auto-hide -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const flashMessage = document.getElementById('flash-message');
                if (flashMessage) {
                    setTimeout(() => {
                        flashMessage.style.display = 'none';
                    }, 5000);
                }
            });
        </script>