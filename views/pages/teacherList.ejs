<%- include('../partials/header') %>

    <div class="bg-white mt-20 py-20">
        <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center">
            <h1 class="text-5xl font-extrabold text-gray-800 mb-8">Our Complete Staff</h1>
            <p class="text-lg text-gray-600 leading-relaxed mb-12">
                Meet all our dedicated professionals who are contributing to the success of our students.
            </p>

            <!-- Full Staff Members Section -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
                <% teachers.forEach(teacher=> { %>
                    <div
                        class="bg-gradient-to-r from-blue-100 to-blue-300  rounded-lg shadow-xl hover:shadow-2xl transition-all transform hover:scale-105 duration-300 ease-in-out">
                        <!-- Image Section -->
                        <div class="w-full flex items-center justify-center pt-5">
                            <% if (teacher.imageUrl) { %>
                                <img src="<%= teacher.imageUrl%>" alt="<%= teacher.name %>"
                                    class="h-40 w-40 object-cover rounded-full border-4 border-blue-600 shadow-lg">
                                <% } else { %>
                                    <div class="text-gray-400 text-sm">No Image Available</div>
                                    <% } %>
                        </div>

                        <!-- Content Section -->
                        <div class="p-6">
                            <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                                <%= teacher.name %>
                            </h3>
                            <p class="text-blue-600 font-medium mb-3">
                                <%= teacher.subject %>
                            </p>
                            <p class="text-gray-600 text-sm leading-relaxed">
                                <%= teacher.description %>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <!-- Call to Action Section -->
            <div class="mt-16 text-center bg-gradient-to-r from-blue-400 to-blue-600 p-10 rounded-lg">
                <h2 class="text-4xl text-white font-extrabold text-gray-800 mb-6">
                    Join Our Growing Team
                </h2>
                <p class="text-lg text-gray-600 leading-relaxed mb-8 max-w-3xl mx-auto">
                    Are you passionate about education and ready to make a difference? We are always on the lookout for
                    talented individuals to join our dynamic team of professionals.
                </p>
                <a href="/contact"
                    class="inline-block px-8 py-3 bg-yellow-500 text-black text-lg font-semibold rounded-full shadow-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50 transition duration-300 ease-in-out transform hover:scale-105">
                    Apply Now
                </a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>