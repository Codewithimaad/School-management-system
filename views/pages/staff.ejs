<%- include('../partials/header1') %>

    <div class="container-xxl bg-white p-0">




        <!-- Page Header End -->
        <div class="container-xxl py-5 page-header position-relative mb-5">
            <div class="container py-5">
                <h1 class="display-2 text-white animated slideInDown mb-4">Teachers</h1>
                <nav aria-label="breadcrumb animated slideInDown">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Our Staff</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Page Header End -->


        <!-- Team Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                    <h1 class="mb-3">Our Staff</h1>
                    <p class="text-muted">Meet our dedicated and passionate educators who make a difference in students'
                        lives. Our staff members bring years of experience and expertise to ensure the highest quality
                        education.</p>
                </div>
                <div class="row g-4" id="team-cards">
                    <!-- Teacher Card -->
                    <% teachers.forEach(teacher=> { %>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="card shadow border-0 rounded-3 d-flex flex-column">
                                <img class="card-img-top rounded-circle w-50 mx-auto mt-4" src="<%= teacher.imageUrl %>"
                                    alt="Teacher">
                                <div class="card-body text-center d-flex flex-column">
                                    <h4 class="card-title">
                                        <%= teacher.name %>
                                    </h4>
                                    <p class="card-text text-muted">
                                        <%= teacher.subject%>
                                    </p>
                                    <p class="teacher-description">
                                        <%=teacher.description %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <%}) %>
                </div>
            </div>
        </div>
        <!-- Team End -->

        <script>
            // Function to adjust the height of all cards to match the tallest one
            window.onload = function () {
                var cards = document.querySelectorAll('.card');
                var maxHeight = 0;

                // Find the tallest card
                cards.forEach(function (card) {
                    var cardHeight = card.offsetHeight;
                    if (cardHeight > maxHeight) {
                        maxHeight = cardHeight;
                    }
                });

                // Set all cards to the tallest height
                cards.forEach(function (card) {
                    card.style.height = maxHeight + 'px';
                });
            };
        </script>



    </div>

    <%- include('../partials/footer1') %>