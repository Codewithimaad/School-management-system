<%- include('../partials/header1') %>

    <div class="container-xxl bg-white p-0">




        <!-- Page Header End -->
        <div class="container-xxl py-5 page-header position-relative mb-5">
            <div class="container py-5">
                <h1 class="display-2 text-white animated slideInDown mb-4">Teachers</h1>
                <nav aria-label="breadcrumb animated slideInDown">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Our Staff</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Page Header End -->


        <!-- Team Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                    <h1 class="mb-3">Our Staff</h1>
                    <p class="text-muted">Meet our dedicated and passionate educators who make a difference in students'
                        lives. Our staff members bring years of experience and expertise to ensure the highest quality
                        education.</p>
                </div>
                <div class="row g-4" id="team-cards">
                    <!-- Teacher Card 1 -->
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card shadow border-0 rounded-3 d-flex flex-column">
                            <img class="card-img-top rounded-circle w-50 mx-auto mt-4" src="img/team-1.jpg"
                                alt="Teacher">
                            <div class="card-body text-center d-flex flex-column">
                                <h4 class="card-title">John Doe</h4>
                                <p class="card-text text-muted">Mathematics Teacher</p>
                                <p class="teacher-description">John has over 15 years of experience in teaching
                                    mathematics. He is dedicated to making math enjoyable and accessible for every
                                    student. His teaching methodology emphasizes problem-solving and critical thinking.
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- Teacher Card 2 -->
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="card shadow border-0 rounded-3 d-flex flex-column">
                            <img class="card-img-top rounded-circle w-50 mx-auto mt-4" src="img/team-2.jpg"
                                alt="Teacher">
                            <div class="card-body text-center d-flex flex-column">
                                <h4 class="card-title">Jane Smith</h4>
                                <p class="card-text text-muted">Science Teacher</p>
                                <p class="teacher-description">Jane has a passion for science and strives to make every
                                    lesson engaging and interactive. With a focus on inquiry-based learning, she
                                    encourages students to explore the wonders of the natural world.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Teacher Card 3 -->
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="card shadow border-0 rounded-3 d-flex flex-column">
                            <img class="card-img-top rounded-circle w-50 mx-auto mt-4" src="img/team-3.jpg"
                                alt="Teacher">
                            <div class="card-body text-center d-flex flex-column">
                                <h4 class="card-title">Mark Wilson</h4>
                                <p class="card-text text-muted">History Teacher</p>
                                <p class="teacher-description">Mark has been teaching history for over 10 years and
                                    enjoys bringing historical stories to life. He believes that understanding history
                                    helps us understand current events and shape our future.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Team End -->

        <script>
            // Function to adjust the height of all cards to match the tallest one
            window.onload = function () {
                var cards = document.querySelectorAll('.card');
                var maxHeight = 0;

                // Find the tallest card
                cards.forEach(function (card) {
                    var cardHeight = card.offsetHeight;
                    if (cardHeight > maxHeight) {
                        maxHeight = cardHeight;
                    }
                });

                // Set all cards to the tallest height
                cards.forEach(function (card) {
                    card.style.height = maxHeight + 'px';
                });
            };
        </script>



    </div>

