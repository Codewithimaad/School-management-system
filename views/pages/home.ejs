<%- include('../partials/header1') %>

  <style>
    .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
      height: 300px;
      /* Fixed height for uniformity */
    }

    .gallery-item img {
      object-fit: cover;
      /* Ensures the image covers the area without stretching or distortion */
      width: 100%;
      height: 100%;
    }

    .gallery-overlay {
      background: rgba(0, 0, 0, 0.4);
      /* Optional, for better visibility of the view button */
      display: flex;
      align-items: center;
      justify-content: center;
    }

    @media (max-width: 992px) {
      .gallery-item {
        height: 250px;
        /* Adjust height for medium screens */
      }
    }

    @media (max-width: 768px) {
      .gallery-item {
        height: 200px;
        /* Adjust height for smaller screens */
      }
    }
  </style>

  <!-- Carousel Start -->
  <div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
      <div class="owl-carousel-item position-relative">
        <img class="img-fluid" src="/images/abdurrehman2.jpg" alt="Luminous School Campus"
          style="height: 550px; object-fit: cover;">
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center"
          style="background: rgba(0, 0, 0, .8);">
          <div class="container">
            <div class="row justify-content-start">
              <div class="col-12 col-lg-8 px-5">
                <h1 class="display-3 text-white animated slideInDown mb-4">Welcome to Luminous School</h1>
                <p class="fs-4 fw-medium text-white mb-4 pb-2">we nurture every studentâ€™s academic, social, and
                  emotional growth to ensure a well-rounded education.</p>
                <a href="/contact" class="btn -pill py-sm-3 px-sm-5 animated slideInRight">Get in Touch</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="owl-carousel-item position-relative">
        <img class="img-fluid" src="/images/Luminous.jpg" alt="Students Engaging in Activities"
          style="height: 550px; object-fit: cover;">
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center"
          style="background: rgba(0, 0, 0, .8);">
          <div class="container">
            <div class="row justify-content-start">
              <div class="col-12 col-lg-8 px-5">
                <h1 class="display-3 text-white animated slideInDown mb-4">Shaping a Brighter Future</h1>
                <p class="fs-4 fw-medium text-white mb-4 pb-2">We blend academic excellence with extracurricular
                  opportunities, empowering students to achieve their fullest potential.</p>
                <a href="/about" class="btn rounded-pill py-sm-3 px-sm-5 me-3 animated slideInLeft">Learn More</a>
                <a href="/contact" class="btn rounded-pill py-sm-3 px-sm-5 animated slideInRight">Contact Us</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Carousel End -->





  <!-- Facilities Start -->
  <div class="container-xxl py-5">
    <div class="container">
      <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
        <h1 class="mb-3">School Facilities</h1>
        <p>Our school is equipped with modern facilities to ensure a safe, engaging, and supportive learning environment
          for every student.</p>
      </div>
      <div class="row g-4">
        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
          <div class="facility-item">
            <div class="facility-icon bg-primary">
              <span class="bg-primary"></span>
              <i class="fa fa-bus-alt fa-3x text-primary"></i>
              <span class="bg-primary"></span>
            </div>
