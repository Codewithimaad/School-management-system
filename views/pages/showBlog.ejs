<%- include('../partials/header1') %>

    <!-- Show Blog Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <h1 class="mb-3">Blog: <%= showBlog.title %>
                </h1>
                <p class="fs-5 text-muted">
                    <i>By <%= showBlog.author %> | Published on <%= new Date(showBlog.createdAt).toLocaleDateString() %>
                    </i>
                </p>
            </div>

            <!-- Blog Post Content -->
            <div class="row">
                <div class="col-lg-12 mx-auto">
                    <div class="card shadow-sm border-light rounded mb-5">
                        <img class="card-img-top" src="<%= showBlog.imageUrl %>" alt="<%= showBlog.title %>">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <%= showBlog.title %>
                            </h5>
                            <!-- Render the content with line breaks -->
                            <p class="card-text fs-6">
                                <%- showBlog.content %> <!-- This will render the content with line breaks -->
                            </p>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/" class="btn btn-outline-secondary">Back to Home</a>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success text-white">Published</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of Blog Post Content -->

        </div>
    </div>
    <!-- Show Blog End -->

    <%- include('../partials/footer1') %>